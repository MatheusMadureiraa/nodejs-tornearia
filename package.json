{
  "name": "tornearia-vallim",
  "version": "1.0.0",
  "description": "Sistema de GestÃ£o para Vallim Tornearia",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node backend/server.js",
    "dev": "npm start",
    "build": "electron-builder",
    "build-win": "node scripts/build-production.js",
    "clean": "rimraf dist node_modules package-lock.json",
    "rebuild": "npm run clean && npm install"
  },
  "build": {
    "appId": "com.vallim.tornearia",
    "productName": "Vallim Tornearia",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!tests/**/*",
      "!.git/**/*",
      "!*.md"
    ],
    "asarUnpack": [
      "backend/**/*",
      "frontend/**/*",
      "node_modules/sqlite3/**/*"
    ],

    "win": {
      "target": {
        "target": "nsis"
      },
      "icon": "build/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Vallim Tornearia",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "allowElevation": true
    }
  },
  "author": "Matheus Madureira",
  "license": "MIT",
  "engines": {
    "node": ">=14.20.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "archiver": "^5.3.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.4",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "5.1.6",
    "unzipper": "^0.10.14"
  },
  "devDependencies": {
    "electron": "13.6.9",
    "electron-builder": "22.14.13",
    "electronmon": "^2.0.3",
    "rimraf": "^3.0.2"
  }
}
