{
  "name": "tornearia-vallim",
  "version": "1.0.0",
  "description": "Sistema de Gest√£o para Vallim Tornearia",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node backend/server.js",
    "dev": "npm start",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.vallim.tornearia",
    "productName": "Vallim Tornearia",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "backend/**/*",
      "frontend/**/*",
      "package.json",
      "!backend/uploads/**/*",
      "!backend/backups/**/*",
      "!backend/database/*.sqbpro",
      "!tests/**/*",
      "!assets/**/*",
      "!*.md",
      "!.gitignore"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "server",
        "filter": [
          "**/*",
          "!uploads/**/*",
          "!backups/**/*",
          "!database/*.sqbpro"
        ]
      }
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Vallim Tornearia"
    }
  },
  "author": "Matheus Madureira",
  "license": "MIT",
  "dependencies": {
    "archiver": "^5.3.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.4",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "5.0.2",
    "unzipper": "^0.10.14"
  },
  "devDependencies": {
    "electron": "16.0.0",
    "electron-builder": "^24.6.4",
    "electronmon": "^2.0.3"
  }
}