{
  "name": "tornearia-vallim",
  "version": "1.0.0",
  "description": "Aplicativo desktop com Electron, SQLite3, Express, CORS e Dotenv",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node backend/server.js",
    "dev": "npm start",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.vallim.tornearia",
    "productName": "Vallim Tornearia",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "backend/**/*",
      "frontend/**/*",
      "package.json",
      "!backend/uploads/temp/**/*",
      "!backend/backups/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "server",
        "filter": ["**/*", "!uploads/temp/**/*", "!backups/**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/public/assets/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "frontend/public/assets/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "frontend/public/assets/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "Matheus Madureira",
  "license": "MIT",
  "dependencies": {
    "archiver": "^5.3.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.4",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "5.0.2",
    "unzipper": "^0.10.14"
  },
  "devDependencies": {
    "electron": "16.0.0",
    "electron-builder": "^24.6.4",
    "electronmon": "^2.0.3"
  }
}